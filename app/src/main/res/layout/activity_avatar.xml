<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="oles.rus.app.olesrusapp.AvatarActivity">

    <TextView
        android:id="@+id/name"
        android:text=" "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <ImageView
        android:id="@+id/avatar1"
        android:src="@drawable/avatar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:onClick="selectAvatar1"
        />

    <ImageView
        android:id="@+id/avatar2"
        android:src="@drawable/avatar2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/avatar1"
        android:layout_below="@id/name"
        android:onClick="selectAvatar2"
        />

    <Button
        android:id="@+id/avatar_send"
        android:text="Select Avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/avatar1"
        android:onClick="selectAvatar"
        />

</RelativeLayout>
